<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="buttons" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5pt</item>
        <item name="android:textColor">#000</item>

    </style>

    <style name="scores" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">3pt</item>
        <item name="android:textColor">#fff</item>

    </style>

    <style name = "error"  parent="@android:style/TextAppearance.Medium">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">9pt</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

</resources>
